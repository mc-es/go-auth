# Database (PostgreSQL)
GO_AUTH_DATABASE_NAME=go-auth
GO_AUTH_DATABASE_HOST=localhost
GO_AUTH_DATABASE_PORT=5432
GO_AUTH_DATABASE_USER=your-db-user
GO_AUTH_DATABASE_PASSWORD=your-db-password
GO_AUTH_DATABASE_SSL_MODE=disable

# Security (JWT, hashing)
GO_AUTH_SECURITY_JWT_SECRET=your-jwt-secret-at-least-32-characters-long
GO_AUTH_SECURITY_ACCESS_TTL=15m
GO_AUTH_SECURITY_REFRESH_TTL=48h
GO_AUTH_SECURITY_HASH_COST=12

# SMTP (email)
GO_AUTH_SMTP_HOST=smtp.example.com
GO_AUTH_SMTP_PORT=587
GO_AUTH_SMTP_USERNAME=your-smtp-username
GO_AUTH_SMTP_PASSWORD=your-smtp-password
GO_AUTH_SMTP_FROM=noreply@example.com
