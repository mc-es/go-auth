# https://EditorConfig.org

root = true

# Global settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab

# Go modules
[go.{mod,sum,work}]
indent_style = tab

# Makefile files
[Makefile]
indent_style = tab

# Markdown files
[*.md]
trim_trailing_whitespace = false
